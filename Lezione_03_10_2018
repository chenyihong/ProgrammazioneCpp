#include <iostream>
using namespace std;

int main() {
	/*
	 * char
	 * singoli caratteri (ES: 'a'-'z' 'A'-'Z' '0'-'9' simboli)
	 */
	cout << 'a' << endl;		// char
	cout << (int) 'a' << endl;	// ASCII
	cout << (char) 100 << endl;

	/*
	 * bool
	 * valori 		: 	true / false
	 * operazioni	:	&&(and) / ||(or) / !(not)
	 */

	/*
	 * Istruzione di assegnamento (赋值)
	 * memorizza un valore o il risultato di calcolo in un variabile
	 * (ES: risultato = a * b;)
	 */

	/*
	 * Espressioni
	 * una sequenza di operazioni che restituiscono un valore
	 * (ES: 5-(3-2))
	 */
	return 0;
}
