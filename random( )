#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
	srand(time(0));
	//srand(2);		<=== costante 2  genera sempre lo stesso numero
	cout << "Numero generato casualmente [0~99]: [" << rand() % 100 << "]"
			<< endl;
	return 0;
}
